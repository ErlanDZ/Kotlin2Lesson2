<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin15dp"
    app:cardCornerRadius="@dimen/cardCornerRadius30dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/height40dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_top_news"
                android:layout_width="@dimen/width370dp"
                android:layout_height="@dimen/height210dp"
                tools:src="@drawable/test_image"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="@dimen/width350dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/size20sp"
            android:layout_marginTop="@dimen/margin20dp"
            tools:text="Population of the tabs to display is done through TabLayout." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin20dp"
            android:layout_marginStart="@dimen/size10"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius50dp"
                app:cardElevation="@dimen/cardElevation0dp">

                <ImageView
                    android:layout_width="@dimen/height40dp"
                    android:layout_height="@dimen/height40dp"
                    tools:src="@tools:sample/avatars"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginStart="@dimen/size10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10 Jan, 2020"
                android:layout_marginStart="@dimen/margin137dp"
                />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>